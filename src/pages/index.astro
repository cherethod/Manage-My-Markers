---
import Layout from '../layouts/Layout.astro';
import Topbar from '../components/Topbar.astro';
import Content from '../components/Content.astro';
---

<Layout title="Manage My Markers.">
	<main>
		<div id="container">
			<Topbar></Topbar>
			<Content class=" overflow-y-auto h-full"></Content>
		</div>
	</main>
</Layout>

<style>
	main {		
		height: 100vh;
		width: 100vw;
		max-width: 100vw;
		max-height: 100vh;
		overflow: hidden;
	}
	#container {
		width: 100%;
		height: calc(100% - 32px);
		/* background: url('./img/interfaz_bg.webp') center center no-repeat; */
		background-size: cover;
	}
</style>

